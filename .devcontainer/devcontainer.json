{
    "name": "Atlas",
    "dockerFile": "Dockerfile",
    "runArgs":[
        "--privileged",
        "--hostname", "lift",
        "--net", "host",
        "-v", "/var/run/docker.sock:/var/run/docker.sock",
        "-v", "${env:HOME}${env:USERPROFILE}/bin:/home/dev/bin:ro",
        "-v", "${env:HOME}${env:USERPROFILE}/.bashrc:/home/dev/.hostbashrc:ro",
        "-v", "${env:HOME}${env:USERPROFILE}/.bash_history:/home/dev/.bash_history",
    ],
    "postCreateCommand": "sudo chown root:docker /var/run/docker.sock",
    "extensions": [
        "golang.go",
        "zxh404.vscode-proto3",
    ],
    "settings": {
        "go.useLanguageServer": true,
        "gopls": {
            // Add parameter placeholders when completing a function.
           "usePlaceholders": true,
           // If true, enable additional analyses with staticcheck.
           // Warning: This will significantly increase memory usage.
           "staticcheck": false,
       },
        "protoc": {
            "options": [
                "--proto_path=.",
                "--go_out=/tmp/protogen/"
            ]
        },
    } 
}
